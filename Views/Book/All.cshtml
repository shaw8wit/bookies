@model bookies.ViewModel.BookControllerAllViewModel

@{
    ViewBag.Title = "Book";
}

<h2>Book</h2>

@if(@Model.HasLib)
{
    <p>
        @Html.ActionLink("ADD FOR SELLING", "Addforsale")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Books[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books[0].Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Books)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Buy", "Buy", new { id = item.Id, rent = false }) |
                @Html.ActionLink("Rent", "Buy", new { id = item.Id, rent = true })
            </td>
        </tr>
    }
</table>
